# Docker Environment Variables
# Copy this file to .env and update values as needed

# Application
APP_NAME="Laravel LMS"
APP_PORT=8000
VITE_PORT=5173

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel_lms_db
DB_USERNAME=laravel_lms
DB_PASSWORD=laravel_lms_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail (Mailhog)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# pgAdmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Mailhog
MAILHOG_PORT=8025
MAILHOG_SMTP_PORT=1025

# User IDs (for file permissions)
USER_ID=1000
GROUP_ID=1000
